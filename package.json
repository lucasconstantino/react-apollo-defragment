{
  "name": "react-apollo-refragment",
  "version": "0.1.0",
  "description": "Experimental automatic GraphQL fragments loading for React.",
  "main": "lib/index.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "clean": "rm -Rf lib",
    "build": "npm run clean && babel src -d lib",
    "lint": "eslint src tests",
    "test": "jest",
    "prepush": "npm run lint && npm run test",
    "prepublish": "npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "react",
    "apollo",
    "graphql",
    "fragment",
    "react-apollo"
  ],
  "author": "Lucas Constantino Silva <lucasconstantinosilva@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "apollo-cache-inmemory": "^1.1.11",
    "apollo-client": "^2.2.7",
    "apollo-link-schema": "^1.0.6",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-preset-react": "^6.24.1",
    "babel-preset-taller": "^0.1.1",
    "babel-register": "^6.18.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-config-taller": "^1.1.4",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-standard": "^3.0.1",
    "graphql": "^0.13.2",
    "graphql-tag": "^2.8.0",
    "graphql-tools": "^2.23.1",
    "jest": "^19.0.2",
    "prop-types": "^15.6.1",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-apollo": "^2.1.0-beta.3",
    "react-dom": "^16.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasconstantino/react-apollo-refragment.git"
  },
  "bugs": {
    "url": "https://github.com/lucasconstantino/react-apollo-refragment/issues"
  },
  "homepage": "https://github.com/lucasconstantino/react-apollo-refragment#readme",
  "jest": {
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/enzyme.setup.js"
    ],
    "moduleNameMapper": {
      "react-apollo-refragment": "<rootDir>/src"
    }
  },
  "dependencies": {
    "react-tree-walker": "^2.1.3"
  },
  "peerDependencies": {
    "graphql": "^0.13.2",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-apollo": "^2.1.0-beta.3"
  }
}
